@model BookingSystem.Domain.WebUI.Account.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AnonymousLayout.cshtml";
}

<div class="login-page col-md-12">

    <div class="col-md-7" style=" margin-left: 7% !important;  margin-top: 15% !important;">
        <img src="~/Content/Image/RegisterPage.jpg" style="width: 100% !important; height: 100% !important;" />
    </div>
    <div class="register-box col-md-5" style="margin-top: 14% !important;">
        <div class="register-logo">
            <a href="../../index2.html"><b>Register Booking</b></a>
        </div>
        <div class="register-box-body">
            <p class="login-box-msg">Register a new membership</p>
            @using (Html.BeginForm())
            {
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(p => p.Name, new { @class = "form-control", @placeholder = "Name" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(p => p.Name)
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(p => p.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(p => p.LastName)
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(p => p.EMail, new { @class = "form-control", @placeholder = "Email" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @Html.ValidationMessageFor(p => p.EMail)
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(p => p.Password, new { @class = "form-control", @placeholder = "Password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessageFor(p => p.Password)
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(p => p.PasswordConfirm, new { @class = "form-control", @placeholder = "ReType Password" })
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                    @Html.ValidationMessageFor(p => p.PasswordConfirm)
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                @Html.CheckBox("IsAcceptTermRules", false) I agree to the <a href="#">terms</a>
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                    </div>
                </div>
            }

            <a href="@Url.Action("Login","Account")" class="text-center">I already have a membership</a>
        </div>
    </div>
</div>