@model HotelTypeFilter

@{
    ViewBag.Title = "HotelTypeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageScripts
{
    <script src='@Url.Content("~/Scripts/pages/HotelTypes/hoteltypelist.js")'></script>
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-filter"></i> Filters</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body" style="">
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.IsActive, new { @class = "control-label" })
                        <div class="form-group">
                            @Html.CheckBoxFor(model => model.IsActive, new { @class = "checkbox" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="box-footer" style="">
            Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
            the plugin.
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Data Table With Full Features</h3>
            </div>
            <div class="box-body">
                <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="col-sm-12">
                        <table id="tableHotelTypeList" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Active</th>
                                    <th>Deleted</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>