@model BookingSystem.Domain.WebUI.Hotel.HotelTypeVM

@{
    ViewBag.Title = "HotelTypeEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageScripts
{
    @Html.RenderScriptFile(Url.Content("~/Scripts/pages/HotelTypes/hoteltypeedit.js"))
}

@section BrundCrumb{
    @Html.BuildBrandCrumb()
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-default">
            <div class="box-body" style="">
                <div class="row">
                    @Html.BHiddenFor(p => p.Id)
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                            <div class="form-group">
                                @Html.BTextBoxFor(model => model.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                            <div class="form-group">
                                @Html.BTextAreaFor(model => model.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer" style="">
                <div class="col-md-12">
                    <div style="float:right; padding-left:2px;">
                        <button type="button" class="btn btn-block btn-danger btnCancel" onclick="location.href='@Url.Action("HotelTypeList", "Hotel")'">Cancel</button>
                    </div>
                    <div style="float:right; padding-right:2px;">
                        <button type="button" class="btn btn-block btn-primary btnEdit">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var urlList =
    {
        updateUrlAction: '@Url.Action("UpdateHotelType","Hotel")',
        listPageUrlAction : '@Url.Action("HotelTypeList","Hotel")'
    };

jQuery(document).ready(function () {
    HotelTypeEdit.init(urlList);
});
</script>